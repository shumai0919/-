#define USE_TIMER3_ISR
#include "mono_con.h"

word tc = 1000;
int count = 99;
int dig_scnd;

void setup() {
  // put your setup code here, to run once:
  config_init();
  serial_init();
  noTone(BZ_PIN);
}

ISR(TIMER3_COMPA_vect) {
  tc++;
}

void loop() {
  // put your main code here, to run repeatedly:
  if (tc > 1000) {
    tc = 0;
    if (count == 0) dig_scnd = 10;
    else if (count % 2 == 1) dig_scnd = 1;
    else dig_scnd = 0;
    disp(num[dig_scnd], num[count % 10]);
    count++;
    if (count > 9) count = 0;
  }
}

