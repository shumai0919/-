
#include "mono_con.h"

int ledPara[] = {B000, B001, B010, B100, B011, B110, B101, B111}; //消灯0、赤1、青2、緑3、紫4、青緑5、黄6、白7
int order[] = {1, 3, 6, 2, 4, 5, 7};

void setup() {
  // put your setup code here, to run once:
  config_init();
  serial_init();
  noTone(BZ_PIN);
}

void loop() {
  // put your main code here, to run repeatedly:
  for (int i = 0; i < 8; i++) {
    lm.color.GBR = ledPara[order[i]];
    led_stepmotor(lm.b8);
    delay(1000);
  }
}