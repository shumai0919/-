#define USE_TIMER3_ISR
#include "mono_con.h"

word tc = 1000;
// int count = 99;
// int dig_scnd;

int alph[6] = {
    0x77,  // A 0
    0x7f,  // B 1
    0x39,  // C 2
    0x3f,  // D 3
    0x79,  // E 4
    0x71   // F 5
};

void setup() {
  // put your setup code here, to run once:
  config_init();
  serial_init();
  noTone(BZ_PIN);
  disp(alph[0], alph[2]);
}

ISR(TIMER3_COMPA_vect) {
  tc++;
}

void loop() {
  // put your main code here, to run repeatedly:
  if (tc > 1000) {
    
  }
}

